extends layout

block content
  .content-wrapper
    .section.content-header
      h1
        |Videos
    .section.content
      .box.box-primary
        .box-body
          table.table.table-hover.table-bordered(id='table1')
            thead
              tr
                th
                  |ID
                th
                  |Title                  
                th
                  |Category
                th
                  |Video Type
                th
                  |Created At
                th
                  |Status
              tbody
                each video in videos
                  if(video.status == 1 || video.status == 0)
                    tr.video-item(vid='#{video._id}')
                      td
                        =video._id
                      td
                        =video.title
                      td
                        =video.category
                      td
                        =video.type
                      td
                        =moment(video.created_at).format('YYYY-MM-DD')
                      td
                        if(video.status == 1)
                          span.label.label-success
                            |Approved
                        if(video.status == 0)
                          span.label.label-warning
                            |Pending